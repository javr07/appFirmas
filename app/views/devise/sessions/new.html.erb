<div class="jumbotron bg-info text-center">
    <h1><font color="white">FirmAndando</font></h1>
</div>
<div class="border-form-div">
<h2>Iniciar sesión</h2>
<br />

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => 'Correo electrónico', :class=>'form-control'%>

    <%= f.password_field :password, autocomplete: "current-password", :placeholder => 'Contraseña', :class=>'form-control' %>

  <% if devise_mapping.rememberable? -%>

      <%= f.check_box :remember_me %>
      <%= f.label :Recordar %>

  <% end -%>

  <div class="actions">
    <%= f.submit "Ingresar",:class=>'btn btn-primary'  %>
  </div>
  <br />
  <br />
<% end %>

<%= render "devise/shared/links" %>
</div>
